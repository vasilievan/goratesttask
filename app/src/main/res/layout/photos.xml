<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:background="@color/grey"
        android:textSize="18sp"
        android:text="@string/title_photos"
        android:id="@+id/title_photos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/photos_recyclerview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center">
    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/photos_recyclerview"
        android:layout_width="0sp"
        android:layout_height="0sp"
        android:layout_marginBottom="8sp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8sp"
        android:layout_marginTop="8sp"
        tools:listitem="@layout/username_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_photos"/>
</androidx.constraintlayout.widget.ConstraintLayout>